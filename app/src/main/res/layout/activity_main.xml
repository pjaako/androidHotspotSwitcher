<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-109dp">

        <Button
            android:id="@+id/buttonCheckHotspotState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:onClick="onButtonCheckHotspotStateClick"
            android:text="Check HotSpot State" />

        <Button
            android:id="@+id/buttonShowStandardDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:onClick="onButtonShowStandardDialogClick"
            android:text="Show standard dialog" />

        <Button
            android:id="@+id/buttonStartLocalOnlyHotspot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:onClick="onButtonStartLocalOnlyHotspotClick"
            android:text="Start local only hotspot" />

        <Button
            android:id="@+id/buttonStopLocalOnlyHotspot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:onClick="onButtonStopLocalOnlyHotspotClick"
            android:text="STOP LOCAL ONLY HOTSPOT" />

        <TextView
            android:id="@+id/textViewHotspotInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:text="Hotspot Info" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>